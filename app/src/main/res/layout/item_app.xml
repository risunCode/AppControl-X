<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/app_icon_desc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/on_surface"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:singleLine="true"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/tvStatusFrozen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badge_frozen"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_frozen"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStatusRunning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badge_running"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_running"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStatusStopped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badge_stopped"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_stopped"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStatusRestricted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badge_restricted"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_restricted"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_info"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btn_info" />

</LinearLayout>
