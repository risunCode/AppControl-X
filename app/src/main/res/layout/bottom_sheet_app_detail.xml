<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- App Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/app_icon_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAppType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaunchApp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_launch"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            style="@style/Widget.Material3.Button.TonalButton"
            android:contentDescription="@string/action_launch" />
    </LinearLayout>

    <!-- Package Name -->
    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="@color/on_surface_secondary"
        android:textIsSelectable="true"
        android:fontFamily="monospace" />

    <!-- Processing Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvActionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- App Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_status"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Battery Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_battery"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvBatteryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" 
                android:background="@color/outline" android:layout_marginVertical="8dp" />

            <!-- App Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_app_size"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvAppSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Permissions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_permissions"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvPermissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Target SDK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_target_sdk"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvTargetSdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Min SDK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_min_sdk"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvMinSdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" 
                android:background="@color/outline" android:layout_marginVertical="8dp" />

            <!-- Install Path -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_install_path"
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvInstallPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:textIsSelectable="true" />

            <View android:layout_width="match_parent" android:layout_height="1dp" 
                android:background="@color/outline" android:layout_marginVertical="8dp" />

            <!-- Installed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_installed"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvInstallDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Updated -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_updated"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvUpdateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Actions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/detail_quick_actions"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- Actions Grid - 3 columns, ordered by safety -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <!-- Row 1: Force Stop, Freeze, App Info -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForceStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_force_stop"
            android:textSize="10sp"
            app:icon="@drawable/ic_stop"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleEnable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_freeze"
            android:textSize="10sp"
            app:icon="@drawable/ic_freeze"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn_info"
            android:textSize="10sp"
            app:icon="@drawable/ic_info"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Row 2: Clear Cache, Clear Data, Uninstall -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearCache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_clear_cache"
            android:textSize="10sp"
            app:icon="@drawable/ic_cleaning"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_clear_data"
            android:textSize="10sp"
            android:textColor="@color/warning_color"
            app:icon="@drawable/ic_delete_sweep"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconTint="@color/warning_color"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUninstall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_uninstall"
            android:textSize="10sp"
            android:textColor="@color/status_negative"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconTint="@color/status_negative"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Row 3: Restrict BG, Allow BG -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestrictBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_restrict_bg"
            android:textSize="10sp"
            app:icon="@drawable/ic_battery_alert"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllowBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_allow_bg"
            android:textSize="10sp"
            app:icon="@drawable/ic_check_circle"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

    </GridLayout>
</LinearLayout>
